@model CRUDLoja.Models.Produto

@{
    ViewData["Title"] = "Atualizar Produto";
}

<h1>@ViewData["Title"]</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProduto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            <!--Categoria-->
            <div class="form-group">
                <label asp-for="CategoriaProdutos.FirstOrDefault().Categoria" class="control-label"></label>
                <select name="categoriaId" class="form-control">
                    <option value="@Model.CategoriaProdutos.FirstOrDefault().Categoria.Id">@Model.CategoriaProdutos.FirstOrDefault().Categoria.Nome</option>
                    @foreach (Categoria c in ViewBag.Categorias)
                    {
                        <option value="@c.Id">@c.Nome</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProdutoIndex">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
